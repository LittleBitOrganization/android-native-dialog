<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->

    <style name="Alert" parent="">

    </style>

    <!--        <item name="android:background">@drawable/button_selector</item>-->
    <style name="Alert.BaseButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/button_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>



    <style name="Alert.ButtonActive" parent="@style/CustomStyle">
        <item name="android:textColor">#6650a4</item>
    </style>
    
    <style name="Alert.Button" parent="@style/CustomStyle">
        <item name="android:textColor">#625b71</item>
    </style>



    <style name="CustomStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#625b71</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>

        <item name="backgroundTint">@color/bg_color_selector</item>

        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_color</item>
<!--        <item name="backgroundTint">@color/mtrl_btn_text_btn_bg_color_selector</item>-->
    </style>



</resources>